<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content"
      android:weightSum="0.9" >

    <TextView
        android:id="@+id/label_rounds"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="@string/rounds"
        android:gravity="center_horizontal"
        android:layout_weight=".30"
        />

    <TextView
        android:id="@+id/label_num"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="@string/base_val"
        android:gravity="center_horizontal"
        android:layout_weight=".30"
        />

    <TextView
        android:id="@+id/label_exp"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="@string/exponent"
        android:gravity="center_horizontal"
        android:layout_weight=".30"
        />

  </LinearLayout>

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content"
      android:weightSum="1.0" >

    <NumberPicker
        android:id="@+id/picker_rounds"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_rounds"
      android:paddingLeft="2dp"
      android:paddingRight="2dp"

        android:layout_weight=".30"
        />

    <View
        android:layout_height="1dp"
        android:layout_width="0dp"
        android:layout_weight=".05">
    </View>

    <NumberPicker
        android:id="@+id/picker_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_num"
        android:layout_toRightOf="@id/picker_rounds"
        android:layout_weight=".30"

        />

    <View
        android:layout_height="1dp"
        android:layout_width="0dp"
        android:layout_weight=".05">
    </View>

    <NumberPicker
        android:id="@+id/picker_exp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_exp"
        android:layout_toRightOf="@id/picker_num"
        android:layout_weight=".30"

        />

  </LinearLayout>

  <TextView
      android:id="@+id/repetitions"
      android:layout_gravity="center_horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="0"
      />


  <TextView
      android:id="@+id/resultview"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_gravity="center"
      android:layout_weight="2"
      />

  <Button
      android:id="@+id/mybutton"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:text="@string/start_task"
      android:onClick="startMeasuring"
      android:layout_weight="0"
      android:padding="30dp"
      />

</LinearLayout>
